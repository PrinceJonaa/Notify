<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/css/main.css">
<%- include('./partials/nav') %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex flex-row justify-content-between align-items-center filters">
                <h6>Amount of Notes</h6>
                <div class="right-sort">
                    <div class="sort-by"><span class="mr-1">Sort by:</span><a href="#">Most popular</a><i
                            class="fa fa-angle-down ml-1"></i><button class="btn btn-outline-dark btn-sm ml-3 filter"
                            type="button">Filters&nbsp;<i class="fa fa-flask"></i></button></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <% notes.forEach(note => { %>
        <div class="col-md-4">
            <div class="p-card bg-white p-2 rounded px-3">
                <div class="d-flex align-items-center credits"><img src="https://i.imgur.com/hlz6G90.png"
                        width="16px"><span class="text-black-50 ml-2"><%= note.commentAmount %></span></div>
                <h5 class="mt-2"><%= note.title %></h5><span
                    class="badge badge-danger py-1 mb-2"><%= note.owner %></span><span
                    class="d-block mb-5"><%= note.description %></span>
                <div class="d-flex justify-content-between stats">
                    <div><i class="fa fa-calendar-o"></i><span class="ml-2"><button type='checkbox'> Interesting?
                            </button> </span></div>
                    <div class="d-flex flex-row align-items-center">
                        <div class="profiles">
                            <img class="rounded-circle" src="https://picsum.photos/200" width="30"></div><span
                            class="ml-3"> </span>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <div class="d-flex justify-content-end text-right mt-2">
        <nav>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span
                            aria-hidden="true">«</span></a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span
                            aria-hidden="true">»</span></a></li>
            </ul>
        </nav>
    </div>
</div>

<%- include('./partials/footer') %>