<section>
<form action="/notes/<%= note._id %>?_method=PUT " method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="<%= note.title %>" value="<%= note.title %>">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea class="form-control" id="content" name="content" rows="3"><%= note.content %></textarea>
  </div>
  <div class="form-group">
    <label for="description">Text description</label>
    <textarea class="form-control" id="description" name="description" rows="2"><%= note.description  %> </textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</section>

