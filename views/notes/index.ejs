<%- include('../partials/html-head') %>
<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<%- include('../partials/nav') %>

<section>
  <div class="container py-5">
    <header class="text-center">
      <h1 class="display-4">All Notes</h1>
      <p class="lead mb-0 font-italic"> List of all notes</p>
      <p class="font-italic"><br>
        <a href="/notes/new">
          <u>Create a New Note</u>
        </a>
      </p>
    </header>

    <div class="row py-5">
      <div class="col-lg-7 mx-auto">
        <% note.forEach(note => { %>
        <div class="card shadow mb-4">
          <div class="card-body p-5"> 
            <h4 class="mb-4"><%= note.title %> </h4>
            <h6 class="card-subtitle mb-2 text-muted">Created by <%= note.owner.name %></h6>
            <p class="card-text"><br> Note Description: <br> <br><%= note.description%></p>
            <a href="/notes/<%= note._id %>" class="card-link" method="GET">Show Note</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>

</section>

<%- include('../partials/footer') %>