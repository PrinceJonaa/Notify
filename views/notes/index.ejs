<%- include('../partials/html-head') %>
<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<%- include('../partials/nav') %>

<section>

  <h1> All Notes </h1>
  <% if (user) { %>
  <a href="/notes/new">Create a new note</a>
  <% } %>

<% notes.forEach(note => { %>  
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= note.title %> </h5>
      <h6 class="card-subtitle mb-2 text-muted">Created by <%= note.owner %></h6>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
        content.</p>
      <a href="/notes/<%= note._id %>" class="card-link" method="GET">Show Note</a>
      <a href="/notes/<%= note._id %>" class="card-link" method="DELETE">Delete note</a>
    </div>
  </div>
  <% }) %>

  </section>

  <%- include('../partials/footer') %>
